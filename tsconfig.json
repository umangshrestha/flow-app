{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2022",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@config/*": [
				"src/config/*"
			],
			"@api/*": [
				"src/api/*"
			],
			"@utils/*": [
				"src/utils/*"
			],
			"@middleware/*": [
				"src/middleware/*"
			],
			"@types/*": [
				"src/types/*"
			],
			"@logger": [
				"src/logger"
			],
			"@sanitizer/*": [
				"src/sanitizer/*"
			]
		},

		"typeRoots": [
			"src/types/",
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"src/tests/**/*"
	]
}