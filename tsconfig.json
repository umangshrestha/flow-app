{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"target": "es2022",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"@config/*": [
				"config/*"
			],
			"@api/*": [
				"api/*"
			],
			"@utils/*": [
				"utils/*"
			],
			"@middleware/*": [
				"middleware/*"
			],
			"@types/*": [
				"types/*"
			],
			"@logger": [
				"logger"
			],
			"@sanitizer/*": [
				"sanitizer/*"
			],
			"@doc/*": [
				"doc/*"
			]
		},

		"typeRoots": [
			"src/types/",
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	]
}