// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Instructor {
  uwinId       String     @id @unique
  email        String     @unique
  firstName    String
  lastName     String
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  flows        Flow[]
}

model Faculty {
  id         Int          @id @default(autoincrement())
  faculty    String       @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  department Department[]
}

model Department {
  id         Int          @id @default(autoincrement())
  department String       @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Staff      Instructor[]
  Faculty    Faculty      @relation(fields: [facultyId], references: [id])
  facultyId  Int
}

model Flow {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  createdBy   String
  topics      Topic[]
  description String
  location    String     @default("BBCafe")
  tags        Tag[]
  Staff       Instructor @relation(fields: [uwinId], references: [uwinId])
  uwinId      String
}

model Topic {
  id          Int           @id @default(autoincrement())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  topic       String
  links       Link[]
  flows       Flow[]
  FormElement FormElement[]
}

model Link {
  id      Int    @id @default(autoincrement())
  link    String
  Topic   Topic? @relation(fields: [topicId], references: [id])
  topicId Int?
}

model Tag {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  flows     Flow[]
}

model Form {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  isDefault   Boolean       @default(false)
  items       FormElement[]
}

model FormElement {
  id Int @id @default(autoincrement())

  Form   Form? @relation(fields: [formId], references: [id])
  formId Int?

  formType    String
  placeholder String
  isRequired  String
  helpInfo    String
  body        Topic[]
}
